{
    "compilerOptions": {
        "outDir": "./tsc",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "module": "es6",
        "target": "es5",
        "allowJs": true
    },
    "include": [
        "src/index.js",
        "src/stg/**/*",
        "src/platform/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}